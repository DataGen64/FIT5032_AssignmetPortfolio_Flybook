@model IEnumerable<AssignmentPorfolio_Flybook_V2.Models.Flight>


@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search</h2>

@using (Html.BeginForm("Search", "Flights", FormMethod.Get))
{
    <b>Search By:</b>
    @Html.TextBox("FROM")
    @Html.TextBox("TO")
    <input type="submit" value="Search" />
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AvailableSeats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartureDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartureTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArrivalDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArrivalTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departure_Loc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Arrival_Loc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.From_Latitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.From_Longitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.To_Latitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.To_Longitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FairPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FlightNo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departure_Loc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arrival_Loc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.From_Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.From_Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.To_Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.To_Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FairPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightNo)
            </td>

        </tr>
    }

</table>
